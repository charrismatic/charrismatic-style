
@import 'icon_svg_factory';


// EXTEND %svg_icon
// TO APPLY THE DEFAULT SVG ICON STYLES
// OR CREATE YOUR OWN CLASS BELOW


/* DEFINITIONS */
// ICON BASE ELEMENT AND ACCESSORY CLASS
.icon,
i.svg_icon {
  @extend %svg_icon;
}

// SEARCH ICON
%ic-search {
  background-image: define_icon( font-awesome, search, $grey_90);

  &--white { background-image: define_icon( font-awesome, search, $white); }
}

// DIRECTION INDICATORS
.ic-caret-down {
  background-image: define_icon( font-awesome, caret-down, $white);
  &.red { background-image: define_icon( font-awesome, caret-down, $accent_red); }
  &.orange-light { background-image: define_icon( font-awesome, caret-down, lighten($accent_orange, 15%)); }
}

%direction_next { background-image: define_icon( font-awesome, angle-right, $black); }
%direction_prev { background-image: define_icon( font-awesome, angle-left, $black); }

.ic-chevron-circle-up {
  background-image: define_icon( font-awesome, chevron-circle-up, $grey_70);
  &:hover { background-image: define_icon( font-awesome, chevron-circle-up, $accent_orange); }
}

%ic_ui_indicator_next { background-image: define_icon( font-awesome, chevron-down, $grey_90); }


// COLLAPSIBLE LIST EXPAND BUTTON
.mob-collapsible .sm-section-title::before { background-image: define_icon( font-awesome, chevron-down, lighten($accent_orange, 15%)); }

// COMMENT BUBBLES
%comment_bubbles {
  background-image: define_icon( font-awesome, comments, lighten($accent_orange, 5%));
  &.outline { background-image: define_icon( font-awesome, comments-o, lighten($accent_orange, 15%)); }
}

.comment-bubbles { @extend %comment_bubbles; }


// CLOSE / DELETE ICON
%times {
  background-image: define_icon( font-awesome, times, $black);
  &.circle { background-image: define_icon( font-awesome, times-circle, $black); }
  &.circle-o { background-image: define_icon( font-awesome, times-circle-o, $black); }
  &.white { background-image: define_icon( font-awesome, times-circle, $white); }
}

.remove {
  @extend %times;

  height: 1.3rem;
  margin: 0;
  padding: 0;
  width: 1.3rem;
}

.modal .close {
  background-image: define_icon( font-awesome, times, $white);
}
